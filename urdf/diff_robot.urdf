<?xml version="1.0"?>
<robot name="diff_robot">


<material name="black">
    <color rgba="0 0 0 1.0"/>
</material>

<material name="grey">
    <color rgba="0.7 0.7 0.7 1.0"/>
</material>

<material name="green">
    <color rgba="0.0 0.6 0 1.0"/>
</material>

<material name="white">
    <color rgba="1 1 1 1.0"/>
</material>

<link name="base_footprint"/>


<link name="base_link">
    <inertial>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        <mass value="3.0"/>
        <inertia ixx="0.05" ixy="0.0" ixz="0.0" iyy="0.1325" iyz="0.0" izz="0.1625"/>
    </inertial>
    <visual>
        <geometry>  
            <box size="0.7 0.4 0.2"/> 
        </geometry>   
        <origin xyz="0.0 0.0 0.1" rpy="0.0 0.0 0.0"/> 
        <material name="green"/>
    </visual>
</link>



<link name="left_wheel">
    <inertial>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        <mass value="0.5"/>
        <inertia ixx="0.0013542" ixy="0.0" ixz="0.0" iyy="0.0013542" iyz="0.0" izz="0.0025"/>
    </inertial>
    <visual>
        <geometry>
            <cylinder radius="0.1" length="0.05"/>
        </geometry>
        <origin xyz="0.0 0.0 0.0" rpy="1.57 0.0 0.0"/>
        <material name="black"/>     
    </visual>
    <collision>
        <geometry>
            <cylinder radius="0.1" length="0.05"/>
        </geometry>
        <origin xyz="0.0 0.0 0.0" rpy="1.57 0.0 0.0"/>
    </collision>
</link>

<link name="right_wheel">
    <inertial>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        <mass value="0.5"/>
        <inertia ixx="0.0013542" ixy="0.0" ixz="0.0" iyy="0.0013542" iyz="0.0" izz="0.0025"/>
    </inertial>
    <visual>
        <geometry>
            <cylinder radius="0.1" length="0.05"/>
        </geometry>
        <origin xyz="0.0 0.0 0.0" rpy="1.57 0.0 0.0"/>
        <material name="black"/>     
    </visual>
    <collision>
        <geometry>
            <cylinder radius="0.1" length="0.05"/>
        </geometry>
        <origin xyz="0.0 0.0 0.0" rpy="1.57 0.0 0.0"/>
    </collision>
</link>

<link name="caster_wheel">
    <inertial>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        <mass value="0.5"/>
        <inertia ixx="0.0008333" ixy="0.0" ixz="0.0" iyy="0.0008333" iyz="0.0" izz="0.0008333"/>
    </inertial>
    <visual>
        <geometry>
                <sphere radius="0.05"/>
        </geometry>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        <material name="black"/>            
    </visual>
    <collision>
        <geometry>
            <sphere radius="0.05"/>
        </geometry>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
    </collision>
</link>

<link name="imu_link">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0.15815"/>
      <geometry>
        <box size="0.01 0.01 0.01"/>
      </geometry>
    </visual>
  </link>



  <link name="lidar_link">
    <visual>
        <geometry>      
        <cylinder radius="0.1" length="0.05"/>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        <material name="white"/>  
        </geometry> 
    </visual>
    <collision>
        <geometry>
            <cylinder radius="0.05" length="0.05"/>
        </geometry>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
    </collision>
    <inertial>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        <mass value="0.5"/>
        <inertia ixx="0.0013542" ixy="0.0" ixz="0.0" iyy="0.0013542" iyz="0.0" izz="0.0025"/>
    </inertial>
  </link>


<joint name="imu_joint" type="fixed">
    <parent link="base_link"/>
    <child link="imu_link"/>
    <origin xyz="0.35 0.2 0.1" rpy="0.0 0.0 0.0"/>
</joint>

<joint name="base_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0.0 0.0 0.05" rpy="0.0 0.0 0.0"/>
</joint>

<joint name="base_lidar_joint" type="fixed">
    <parent link="base_link"/>
    <child link="lidar_link"/>
    <origin xyz="0.0 0.0 0.225" rpy="0.0 0.0 0.0"/>
</joint>

<joint name="left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="-0.175 0.225 0.0" rpy="0 0.0 0.0"/>  
    <axis xyz="0.0 1.0 0.0"/>
    <dynamics damping="0.2"/>
    <limit effort="100" velocity="1.0"/>
</joint>
<joint name="right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin xyz="-0.175 -0.225 0.0" rpy="0 0.0 0.0"/>  
    <axis xyz="0.0 1.0 0.0"/>
    <dynamics damping="0.2"/>
    <limit effort="100" velocity="1.0"/>
</joint>

<joint name="caster_wheel_joint" type="fixed">
    <parent link="base_link"/>
    <child link="caster_wheel"/>
    <origin xyz="0.2 0.0 -0.03" rpy="0.0 0.0 0.0"/>
</joint>



<gazebo>
    <plugin name="diff_drive" filename="libgazebo_ros_diff_drive.so">
        <!-- wheel info -->
        <left_joint>left_wheel_joint</left_joint>
        <right_joint>right_wheel_joint</right_joint>
        <wheel_separation>0.35</wheel_separation>
        <wheel_diameter>0.1</wheel_diameter>

        <!-- Limits -->
        <max_wheel_torque>200</max_wheel_torque>
        <max_wheel_acceleration>10.0</max_wheel_acceleration>

        <!-- Output -->
        <odometry_frame>odom</odometry_frame>
        <robot_base_frame>base_link</robot_base_frame>

        <publish_odom>true</publish_odom>
        <publish_odom_tf>true</publish_odom_tf>
        <publish_wheel_tf>true</publish_wheel_tf>
    </plugin>
</gazebo>

<gazebo reference="imu_link">
    <sensor type="imu" name="imu">
      <always_on>true</always_on>
      <plugin filename="libgazebo_ros_imu_sensor.so" name="imu_plugin">
        <topicName>imu</topicName>
        <bodyName>imu_link</bodyName>
        <updateRateHZ>10.0</updateRateHZ>
        <gaussianNoise>0.0</gaussianNoise>
        <xyzOffset>0 0 0</xyzOffset>
        <rpyOffset>0 0 0</rpyOffset>
        <frameName>imu_link</frameName>
        <initialOrientationAsReference>false</initialOrientationAsReference>
      </plugin>
    </sensor>
  </gazebo>

  <gazebo reference="lidar_link">
    <sensor name="laser" type="ray">
        <pose> 0 0 0 0 0 0 </pose>
        <visualize>true</visualize>
        <update_rate>10</update_rate>
        <ray>
            <scan>
                <horizontal>
                    <samples>720</samples>
                    <min_angle>-3.14</min_angle>
                    <max_angle>3.14</max_angle>
                </horizontal>
            </scan>
            <range>
                <min>0.1</min>
                <max>12</max>
            </range>
        </ray>
        <plugin name="laser_controller" filename="libgazebo_ros_ray_sensor.so">
            <ros>
                <argument>~/out:=scan</argument>
            </ros>
            <output_type>sensor_msgs/LaserScan</output_type>
            <frame_name>lidar_link</frame_name>
        </plugin>
    </sensor>
</gazebo>

<gazebo reference="base_link">
    <material>Gazebo/Green</material>
</gazebo>
<gazebo reference="right_wheel">
    <material>Gazebo/Black</material>
</gazebo>
<gazebo reference="left_wheel">
    <material>Gazebo/Black</material>
</gazebo>
<gazebo reference="caster_wheel">
    <material>Gazebo/Black</material>
</gazebo>


</robot>